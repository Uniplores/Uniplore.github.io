<div id="worldStructure">
  <div class="structureData">
    <div class="top">
      <div class="left"><%- theme.worldStructure.title %></div>
      <div class="right">
        <div class="ani animated">
          <a href="<%= theme.worldStructure.rightBtnLink %>"
              class="read-more swiper-btn-color">
            <%= theme.worldStructure.rightBtnText %>
          </a>
        </div>
      </div>
    </div>
    <div class="center">
      <%
        var structure_list = theme.worldStructure.list || [];
      %>
      <% structure_list.forEach(function (item) { %>
      <div class="onceWorld">
        <img src="<%= item.picture%>" mode="scaleToFill" />
        <div class="title">
          <%= item.title %>
        </div>
        <div class="describe">
          <%= item.describe %>
        </div>
      </div>
      <% }); %>
    </div>
    <% if(theme.worldStructure.bootomText) { %>
      <div class="bottom">
        <%- theme.worldStructure.bootomText %>
      </div>
    <% }; %>
  </div>
</div>

<script>
  var vm = new Vue({
    el: "#worldStructure",
    data: {},
    computed: {},
    mounted() {},
    methods: {},
    created() {}
  });
</script>
