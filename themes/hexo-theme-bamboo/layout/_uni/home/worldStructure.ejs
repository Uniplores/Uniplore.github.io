  }

  .structureData .top .swiper-btn-color {
    display: inline-block;
    z-index: 1;
    background-color: <%- theme.worldStructure.rightBtnColor %>;
    border: 1px solid <%- theme.worldStructure.rightBtnColor %>;
  }

